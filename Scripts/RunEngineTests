#!/bin/bash

set -e

target_date='2425-2-1'
saves='.games'
binary='Scripts/.build/release/engine-tests'

"$binary" --output "$saves"/1 --target "$target_date"
"$binary" --output "$saves"/2 --target "$target_date"

echo 'ğŸ® Comparing saved game outputs ğŸ®'

diff -q <(jq -S . .games/1/$target_date.json) <(jq -S . .games/2/$target_date.json)
